
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}
 void solve(){
int n;
cin>>n;
int arr[100000];
for(int i =0;i<n;i++)cin>>arr[i];
int x=n/2;
sort(arr,arr+n);
sort(arr+x,arr+n,greater<int>());
for(int i=0;i<x;i++)cout<<arr[i]<<" ";
for(int i=x-1;i>=0;i--)cout<<arr[i]<<" ";
cout<<endl;
for(int i=x;i<n;i++)cout<<arr[i]<<" ";
for(int i=n-1;i>=x;i--)cout<<arr[i]<<" ";
 }
int main(){
