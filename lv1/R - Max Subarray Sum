#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp> 
#include <ext/pb_ds/tree_policy.hpp>
#include<iomanip>
#include<numeric>
using namespace std;
using namespace __gnu_pbds;
typedef long long ll;
typedef tree<int, null_type, less<int>, rb_tree_tag, 
             tree_order_statistics_node_update> ordered_set;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
const ll M = 5e5;
const ll N=1e6;
void solve() {
int n;
cin>>n;
int arr[10000];
ll sum=0;
ll mx=LLONG_MIN;
for (int i = 0; i < n; i++)
{
     cin>>arr[i];
}
for (int i = 0; i < n; i++)
{
     for (int j = i; j <n ; j++)
     {
         sum+=arr[j];
         mx=max(sum,mx);
     } 
    sum=0;
}
cout<<mx;
}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
 // int t; cin >> t;
   //while(t--)
     solve();
}
