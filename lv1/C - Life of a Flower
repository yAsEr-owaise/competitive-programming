#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp> 
#include <ext/pb_ds/tree_policy.hpp>
#include<iomanip>
#include<numeric>
using namespace std;
using namespace __gnu_pbds;
typedef long long ll;
typedef tree<int, null_type, less<int>, rb_tree_tag, 
             tree_order_statistics_node_update> ordered_set;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
const ll M = 1e5;
const ll N=1e6;
void solve() {
int n;
cin>>n;
ll arr[M];
for (int i = 0; i < n; i++)
{
   cin>>arr[i];
}
sort(arr,arr+n);
int l=0,r=2;
while(r!=n){
    if(arr[l]+arr[l+1]>arr[r]){
      yes;
      return;
    }
    l++;
    r++;
}
no;
}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
//int t; cin >> t;
  // while(t--)
     solve();
}
