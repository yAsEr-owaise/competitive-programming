
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
#define ll long long ;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
void solve() {
 int x,y,z;
 int count=0;
 int k,s;
 cin>>k>>s;
 for (int x = 0; x<=k ; x++)
 {
    for (int y = 0; y<=k ; y++)
    {
       int z=s-x-y;
       if(z>=0 && z<=k)count++;
    }
    
 }
 cout<<count;
}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  //int t;
 // cin >> t;
 // while(t--)
    solve();
}


