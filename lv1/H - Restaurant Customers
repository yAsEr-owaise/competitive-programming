
#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp> 
#include <ext/pb_ds/tree_policy.hpp>
#include<iomanip>
#include<numeric>
using namespace std;
using namespace __gnu_pbds;
typedef long long ll;
typedef tree<int, null_type, less<int>, rb_tree_tag, 
             tree_order_statistics_node_update> ordered_set;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
const ll M = 1e9 + 7;
const ll N=2*1e5;
void solve() {
int n;
cin>>n;
int diff[100002]={};
for (int i = 0; i < n; i++)
{
   int l,r;
   cin>>l>>r;
   diff[l]++;
   diff[r+1]--;
}
for (int i = 1; i <=100001; i++)
{
     diff[i]+=diff[i-1];
}
int mx=INT_MIN;
for (int i = 0; i <=100001; i++)
{
     mx=max(diff[i],mx);
}
cout<<mx;
}

int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  //int t; cin >> t;
  // while(t--)
     solve();
}
