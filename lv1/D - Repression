using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}
 void solve(){
int a,b,c;
cin>>a>>b>>c;
int pos1=a+b;
int pos2=a+c;
int pos3=b+c;
cout<<max(pos1,max(pos2,pos3));
 }
