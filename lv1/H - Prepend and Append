#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp> 
#include <ext/pb_ds/tree_policy.hpp>
#include<iomanip>
#include<numeric>
using namespace std;
using namespace __gnu_pbds;
typedef long long ll;
typedef tree<int, null_type, less<int>, rb_tree_tag, 
             tree_order_statistics_node_update> ordered_set;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
const ll M = 2e5;
const ll N=1e6;
void solve() {
int n;
cin>>n;
string s;
cin>>s;
deque <char> dq1;
for (int i = 0; i < n ; i++)
{
     dq1.push_back(s[i]);
}
for (int i = 0; i < n; i++)
{
    if(dq1.back()=='0' && dq1.front()=='1' || dq1.back()=='1' && dq1.front()=='0'){
      dq1.pop_back();
      dq1.pop_front();
    }
    if(dq1.empty())break;
}
cout<<dq1.size()<<endl;
}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
 int t; cin >> t;
   while(t--)
     solve();
}
