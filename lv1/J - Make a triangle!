#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
bool isprime(int x){
  if(x==2)return true;
  else{
    for (int i = 2; i < x; i++)
    {
     if(x%i==0)return false;

    }
    
  }
  return true;
}
 void solve(){
        int a,b,c;
        cin>>a>>b>>c;
        int mx=max(a,max(b,c));
        if(mx==a && b+c<=a){
             cout<<a-(b+c)+1;
        }
        else if(mx==b && a+c<=b)cout<<b-(a+c)+1;
        else if (mx==c && a+b<=c)cout<<c-(a+b)+1;
        else cout<<"0";
      }
 
