
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
#define ll long long ;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
void solve() {
 int n, m;
    cin >> n >> m;
    int r = 0, ans = 1; 
    for (int i = 1; i <= n; i++) {
        int a;
        cin >> a;
        int c = (a + m - 1) / m; 
        if (c >= r) { 
            r = c;
            ans = i;
        }
    }
    cout << ans;
   }
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  //int t;
 // cin >> t;
 // while(t--)
    solve();
}


