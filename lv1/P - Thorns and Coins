
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
typedef long long ll;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()

void solve() {
int n;
cin>>n;
string s;
cin>>s;
int coin=0;
int safe=0;
for (int i = 0; i < n ; i++)
{
    if(s[i]=='@'){
      coin++;
     safe=0;
    }
    else if(s[i]=='.'){
      safe=0;
    }
    else {
      safe++;
    }
    if(safe>=2)break;
}
cout<<coin<<endl;

}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  int t;
 cin >> t;
  while(t--)
    solve();
}


