
#include <bits/stdc++.h>
#include<iomanip>
#include<numeric>
using namespace std;
typedef long long ll;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
const ll M = 1e9 + 7;
struct B {
    int w;
    long long h;
};
long long a[100005];
void solve() {
int n, m;
cin >> n;

    for (int i = 1; i <= n; i++) {
        cin >> a[i];
    }
    cin >> m;
    long long cur = 0;
    while (m--) {
        B b;
        cin >> b.w >> b.h;
        long long res = max(a[b.w], cur);
        
        cout << res << "\n";
        cur = res + b.h;
    }

}
int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  //int t;
//cin >> t;
  //while(t--)
    solve();
}


