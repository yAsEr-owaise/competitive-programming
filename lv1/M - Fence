#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp> 
#include <ext/pb_ds/tree_policy.hpp>
#include<iomanip>
#include<numeric>
using namespace std;
using namespace __gnu_pbds;
typedef long long ll;
typedef tree<int, null_type, less<int>, rb_tree_tag, 
             tree_order_statistics_node_update> ordered_set;
///\\\/// ||\/|| /\/\/\/\/\/
#define yes cout<<"YES\n"
#define no cout<<"NO\n"
#define len() length()
#define all_vec(v) v.begin(), v.end()
const ll M = 1e9 + 7;
const ll N=1.5*1e5;
int arr[N];
int pref[N+1]={};
void solve() {
    int n,k;
    cin>>n>>k;
 for (int i = 0; i < n; i++)
 {
     cin>>arr[i];
 }
 for (int i = 1; i <= n; i++)
 {
    pref[i]=arr[i-1]+pref[i-1];
 }
 int l=1,r=k;
 int ind=0;
 int mn=INT_MAX;
while(r<=n){
   int res=pref[r]-pref[l-1];
    if(res<=mn){
       mn=res;
       ind =l;
    }
   r++;
   l++;
}
cout<<ind;
}

int main(){
  ios::sync_with_stdio(false);
  cin.tie(nullptr);
   cout.tie(NULL);
  //int t; cin >> t;
  // while(t--)
     solve();
}
